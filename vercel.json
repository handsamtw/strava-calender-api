{
      "rewrites": [
        { "source": "/(.*)", "destination": "/api/index" }
      ],
      
      "functions": {
        "api/**": {
          "maxDuration": 60,
          "memory": 3008,
          "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
        }
      },
      "headers": [
        {
          "source": "api/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "s-maxage=1, stale-while-revalidate=59"
            }
          ]
        }
      ]

}